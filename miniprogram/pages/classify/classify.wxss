}

ul li:nth-child(odd) {
  width: 100%;
  height: 5%;
  height: 40px;
  line-height: 40px;
  display: block;
  padding-left: 10px;
}

ul li:nth-child(even) {
  width: 100%;
  height: 40px;
  display: block;
  line-height: 40px;
  background: gainsboro;
  padding-left: 10px;
}

.bottom-bm {
  /* background:rgb(207, 50, 29); */
  width: 45%;
  height: 160px;
  border-radius: 10px;
  text-align: center;
  margin: auto;
  position: absolute;
  z-index: 1;
  margin-top: 38%;
  margin-left: 29%;
}

.bm-img {
  width: 50px;
  height: 50px;
  filter: brightness(80%);
  margin-bottom: 2px;
}

.bm-text {
  font-size: 12px;
  color: white;
  font-weight: 400;
  filter: brightness(80%);
}

.bm-text1 {
  padding-top: 20px;
